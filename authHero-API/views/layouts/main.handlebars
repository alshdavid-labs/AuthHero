<script>    
    function request(type, data, url, auth){
        $.ajax({		
            type: type,
            headers: {'X-AUTH-TOKEN' : auth},
            url: url,        
            crossDomain: true,
            data: JSON.stringify(data),
            dataType: 'json',
            contentType: "application/json",
            success: function() {console.log(data);},
            error: function(data) {console.log(data);}        
        });
    
    }
</script>